<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wy.test.persistence.mapper.UserAdjunctMapper">

	<sql id="where_contition">
		<if test="id != null and id != ''">
			and id = #{id}
		</if>
		<if test="userId != null and userId != ''">
			and userid = #{userId}
		</if>
	</sql>

	<select id="queryPageResults" resultType="UserAdjunctVO">
		select
		*
		from
		auth_user_adjunct
		where
		instid = #{instId}
		<include refid="where_contition" />
	</select>

	<update id="logisticDelete">
		update auth_user_adjunct set
		status = '2'
		where instid = #{instId}
		<if test="id != null">
			and id = #{id}
		</if>
		<if test="name != name">
			and NAME = #{name}
		</if>
	</update>

	<update id="logisticBatchDelete" parameterType="java.util.List">
		update auth_user_adjunct
		set status='2'
		where instid = #{instId}
		and id in
		<foreach item="item" collection="list" open="(" separator="," close=")">
			#{item}
		</foreach>
	</update>
</mapper>