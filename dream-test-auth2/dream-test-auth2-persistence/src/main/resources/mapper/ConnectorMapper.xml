<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wy.test.persistence.mapper.ConnectorMapper">

	<sql id="where_contition">
		<if test="id != null and id != ''">
			and id = #{id}
		</if>
		<if test="connName != null and connName != ''">
			and connname like '%${connName}%'
		</if>
	</sql>

	<select id="queryPageResults" resultType="ConnectorVO">
		select
		*
		from
		auth_connector
		where
		instid = #{instId}
		<include refid="where_contition" />
	</select>
</mapper>